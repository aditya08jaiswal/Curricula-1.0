<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityBackColor"
    tools:context=".ExtraActivity.SuggestionsActivity">

    <include
        layout="@layout/app_toolbar"
        android:id="@+id/toolbar_suggestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_suggestions"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:padding="8dp"
        android:layout_margin="16dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/toolbarFontColor"
        android:layout_centerInParent="true"
        android:layout_above="@id/button_addMaterial"
        android:text="Give your suggestions" />

    <Button
        android:id="@+id/button_addMaterial"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:padding="8dp"
        android:layout_margin="16dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/toolbarFontColor"
        android:layout_centerInParent="true"
        android:text="Add Material" />

    <Button
        android:id="@+id/button_contribute"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:padding="8dp"
        android:layout_margin="16dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/toolbarFontColor"
        android:layout_below="@id/button_addMaterial"
        android:layout_centerInParent="true"
        android:text="Fork &amp; Contribute" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adView_activity_suggestions"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorPrimaryDark"
        android:text="www.github.com/iam844" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView_activity_suggestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/SUGGESTIONS_APP_UNIT_ID">
    </com.google.android.gms.ads.AdView>



</RelativeLayout>